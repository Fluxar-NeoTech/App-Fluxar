<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.NavigationUnitDetails">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/locationText"
            android:layout_width="291dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:text="Av. Visconde de Nova Granada, 1378"
            android:textColor="@color/preto"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/locationIcon"
            app:layout_constraintTop_toBottomOf="@+id/locationIcon" />

        <TextView
            android:id="@+id/locationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Localização"
            android:textColor="@color/roxo_principal"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/locationIcon"
            app:layout_constraintTop_toTopOf="@+id/locationIcon" />

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="25dp"
            android:layout_height="39dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/location_icon"
            app:layout_constraintStart_toStartOf="@+id/quadradoUnidade"
            app:layout_constraintTop_toBottomOf="@+id/quadradoUnidade" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/quadradoUnidade"
            android:layout_width="356dp"
            android:layout_height="106dp"
            android:layout_margin="16dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="@color/roxo_principal"
            app:cardCornerRadius="0dp"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="0dp"
            app:shapeAppearanceOverlay="@style/TopRoundedCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/unitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Unidade aqui"
            android:textColor="@color/cinza_claro"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/quadradoUnidade"
            app:layout_constraintStart_toStartOf="@+id/quadradoUnidade"
            app:layout_constraintTop_toTopOf="@+id/quadradoUnidade" />

        <ImageView
            android:id="@+id/distanceIcon"
            android:layout_width="25dp"
            android:layout_height="39dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/distance_icon"
            app:layout_constraintStart_toStartOf="@+id/locationText"
            app:layout_constraintTop_toBottomOf="@+id/locationText" />

        <TextView
            android:id="@+id/distanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Distância"
            android:textColor="@color/roxo_principal"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/distanceIcon"
            app:layout_constraintTop_toTopOf="@+id/distanceIcon" />

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:text="30km da Unidade de Cajamar à Osasco"
            android:textColor="@color/preto"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/distanceIcon"
            app:layout_constraintTop_toBottomOf="@+id/distanceIcon" />

        <ImageView
            android:id="@+id/measuresIcon"
            android:layout_width="25dp"
            android:layout_height="39dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/measures_icon"
            app:layout_constraintStart_toStartOf="@+id/distanceText"
            app:layout_constraintTop_toBottomOf="@+id/distanceText" />

        <TextView
            android:id="@+id/measuresTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Medidas"
            android:textColor="@color/roxo_principal"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/measuresIcon"
            app:layout_constraintTop_toTopOf="@+id/measuresIcon" />

        <TextView
            android:id="@+id/measuresText"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:text="Esta unidade pode receber: 100m de comprimento, 50m de largura e 80m de altura."
            android:textColor="@color/preto"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/measuresIcon"
            app:layout_constraintTop_toBottomOf="@+id/measuresIcon" />

        <ImageView
            android:id="@+id/truckIcon"
            android:layout_width="25dp"
            android:layout_height="39dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/truck_icon"
            app:layout_constraintStart_toStartOf="@+id/measuresText"
            app:layout_constraintTop_toBottomOf="@+id/measuresText" />

        <TextView
            android:id="@+id/truckTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Como enviar"
            android:textColor="@color/roxo_principal"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/truckIcon"
            app:layout_constraintTop_toTopOf="@+id/truckIcon" />

        <TextView
            android:id="@+id/truckText"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:text="Como enviar Pesagem e documentação de tudo o que será enviado;
            \n\nAvisar previamente por e-mail;
            \n\nEntrega após a confirmação desta unidade para receber;
            \n\nPor caminhão, refrigerado se necessário."
            android:textColor="@color/preto"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/truckIcon"
            app:layout_constraintTop_toBottomOf="@+id/truckIcon" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/laranja_principal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/truckText" />

        <TextView
            android:id="@+id/emailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="E-mail da unidade"
            android:textColor="@color/roxo_principal"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:text="email@dominio.org.br"
            android:textAlignment="center"
            android:textColor="@color/preto"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailTitle" />

        <Button
            android:id="@+id/btEnviarEmail"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/roxo_principal"
            android:fontFamily="@font/roboto_bold"
            android:text="Enviar e-mail"
            android:textColor="#FFFFFF"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>