<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.NavigationReport">

    <LinearLayout
        android:id="@+id/homeLoadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/homeLoadingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/roxo_principal" />

        <TextView
            android:id="@+id/homeLoadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Carregando relatório..."
            android:textColor="@color/roxo_principal"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeErrorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="❌"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/homeErrorText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Erro ao carregar informações"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/homeRetryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tentar Novamente"
            android:backgroundTint="@color/roxo_principal" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/homeContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Relatório de hoje"
                android:textColor="#3B302A"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tituloSituacaoExtoque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="Estoque Médio"
                android:textColor="#A36429"
                android:textSize="27sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textoTotal" />

            <TextView
                android:id="@+id/tvPorcentagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:text="50%"
                android:textColor="@color/preto"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitulo" />

            <TextView
                android:id="@+id/textoOcupacaoEstoqueSetor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="do estoque está ocupado"
                android:textColor="#A36429"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvPorcentagem"
                app:layout_constraintTop_toTopOf="@+id/tvPorcentagem" />

            <TextView
                android:id="@+id/textoOcupacaoEstoqueSetor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Ainda há espaço disponível no estoque!"
                android:textAlignment="center"
                android:textColor="@color/preto"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tituloSituacaoExtoque" />

            <TextView
                android:id="@+id/textoOcupado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Ocupado"
                android:textColor="@color/laranja_principal"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="@+id/imageView10" />

            <TextView
                android:id="@+id/textoTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Total"
                android:textColor="@color/preto"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="@+id/imageView11" />

            <TextView
                android:id="@+id/metrosCubicosOcupados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="12dp"
                android:text="000m³"
                android:textColor="@color/laranja_principal"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/progressBarRelatorio"
                app:layout_constraintTop_toBottomOf="@+id/progressBarRelatorio" />

            <TextView
                android:id="@+id/metrosCubicosTotais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="0000m³"
                android:textColor="@color/preto"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/metrosCubicosOcupados"
                app:layout_constraintTop_toBottomOf="@+id/metrosCubicosOcupados" />

            <ProgressBar
                android:id="@+id/progressBarRelatorio"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginTop="24dp"
                android:max="100"
                android:progress="50"
                android:progressBackgroundTint="#FFE3C8"
                android:progressDrawable="@drawable/progress_bar_laranja"
                android:progressTint="#E4892D"
                app:layout_constraintEnd_toEndOf="@+id/textoOcupacaoEstoqueSetor"
                app:layout_constraintStart_toEndOf="@+id/tvPorcentagem"
                app:layout_constraintStart_toStartOf="@+id/tvPorcentagem"
                app:layout_constraintTop_toBottomOf="@id/tvPorcentagem" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="32dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="@+id/progressBarRelatorio"
                app:layout_constraintTop_toBottomOf="@+id/progressBarRelatorio"
                app:srcCompat="@drawable/caixa_estoque_ocupado_icon" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="27dp"
                android:layout_height="30dp"
                android:layout_marginTop="23dp"
                app:layout_constraintStart_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/imageView10"
                app:srcCompat="@drawable/caixa_estoque_total_icon" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/quadradoPerfil"
                android:layout_width="325dp"
                android:layout_height="168dp"
                android:layout_margin="16dp"
                android:layout_marginTop="28dp"
                android:backgroundTint="#FDEDDD"
                android:clickable="false"
                android:focusable="false"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textoOcupacaoEstoqueSetor3">
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tituloDisponibilidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Disponibilidade"
                android:textColor="#A36429"
                android:textSize="27sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/quadradoPerfil"
                app:layout_constraintStart_toStartOf="@+id/quadradoPerfil"
                app:layout_constraintTop_toTopOf="@+id/quadradoPerfil" />

            <TextView
                android:id="@+id/textoSetorPodeReceber"
                android:layout_width="302dp"
                android:layout_height="77dp"
                android:layout_marginTop="15dp"
                android:text="O setor pode receber 5m³ de insumos no seu estoque"
                android:textAlignment="center"
                android:textColor="@color/preto"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@+id/quadradoPerfil"
                app:layout_constraintStart_toStartOf="@+id/quadradoPerfil"
                app:layout_constraintTop_toBottomOf="@+id/tituloDisponibilidade" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>