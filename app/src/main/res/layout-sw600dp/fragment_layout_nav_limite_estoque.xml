<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.NavigationStockLimit">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/capacidadeEstoqueTitulo"
            android:layout_width="465dp"
            android:layout_height="110dp"
            android:layout_marginTop="300dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Capacidade MÃ¡xima do Estoque"
            android:textAlignment="center"
            android:textColor="@color/laranja_principal"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cadastrarLimiteEstoqueTexto"
            android:layout_width="458dp"
            android:layout_height="83dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:text="Cadastre o limite em altura, largura e profundidade (em metros)"
            android:textAlignment="center"
            android:textColor="@color/preto"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/capacidadeEstoqueTitulo"
            app:layout_constraintWidth_percent="0.8" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/alturaCapacidade"
            android:layout_width="489dp"
            android:layout_height="90dp"
            android:layout_marginTop="24dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/laranja_principal_selector"
            app:hintEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cadastrarLimiteEstoqueTexto"
            app:layout_constraintWidth_percent="0.7">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAlturaCapacidade"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="Altura"
                android:inputType="numberDecimal"
                android:paddingStart="12dp"
                android:paddingTop="20dp"
                android:paddingEnd="12dp"
                android:paddingBottom="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/larguraCapacidade"
            android:layout_width="489dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/laranja_principal_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alturaCapacidade"
            app:layout_constraintWidth_percent="0.7">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputLarguraCapacidade"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="Largura"
                android:inputType="numberDecimal"
                android:paddingStart="12dp"
                android:paddingTop="20dp"
                android:paddingEnd="12dp"
                android:paddingBottom="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Comprimento -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profundidadeCapacidade"
            android:layout_width="489dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/laranja_principal_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/larguraCapacidade"
            app:layout_constraintWidth_percent="0.7">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputComprimentoCapacidade"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="Comprimento"
                android:inputType="numberDecimal"
                android:paddingStart="12dp"
                android:paddingTop="20dp"
                android:paddingEnd="12dp"
                android:paddingBottom="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/concluirBt"
            android:layout_width="489dp"
            android:layout_height="90dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/roxo_principal"
            android:fontFamily="@font/roboto_bold"
            android:text="CONCLUIR"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profundidadeCapacidade"
            app:layout_constraintWidth_percent="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
